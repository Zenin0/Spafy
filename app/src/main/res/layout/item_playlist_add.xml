<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="148dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_margin_default"
    app:cardCornerRadius="@dimen/default_corner_raidus"
    app:cardElevation="@dimen/cardview_default_elevation">

    <ImageView
        android:id="@+id/ivPlaylistImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/playlist_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_gradient">

        <ImageView
            android:id="@+id/ivPlaylistAdd"
            android:layout_width="@dimen/_64dp"
            android:layout_height="@dimen/_64dp"
            android:contentDescription="@string/add_to_playlist"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ivPlaylistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/playlist_tittle"
            android:textSize="@dimen/playlist_name"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPlaylistAdd" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>